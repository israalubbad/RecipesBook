<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/profileTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="@color/orange_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/tajawal_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <ImageView
        android:id="@+id/iconSettingsIV"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/settings"
        app:layout_constraintTop_toTopOf="@id/profileTitleTV"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/profile_image"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/iconSettingsIV"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>

    <LinearLayout
        android:id="@+id/layoutStats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/profileImg"
        app:layout_constraintBottom_toBottomOf="@id/profileImg"
        app:layout_constraintStart_toEndOf="@id/profileImg"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/recipesCountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipes"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/followersLL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/followersCountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="144"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Followers"
                android:textSize="12sp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/followingLL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/followingCountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="306"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Following"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/userNameTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tasya Aulianza"
        android:textStyle="bold"
        android:textSize="18sp"
        android:fontFamily="@font/tajawal_medium"
        app:layout_constraintTop_toBottomOf="@id/profileImg"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/bioTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bio"
        android:fontFamily="@font/tajawal_medium"
        android:textColor="@color/gray_dark"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/userNameTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"/>
    <TextView
        android:id="@+id/bioUserTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="bio"
        android:textColor="#777"
        android:textSize="16sp"
        android:fontFamily="@font/tajawal_medium"
        app:layout_constraintTop_toBottomOf="@id/bioTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"/>

    <Button
        android:id="@+id/manageProfileBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage profile"
        android:textAllCaps="false"
        android:backgroundTint="#FFF3D6"
        android:textColor="@color/textColorPrimary"
        android:fontFamily="@font/tajawal_medium"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/bioUserTV"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>

    <Button
        android:id="@+id/followingProfileBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follow"
        android:fontFamily="@font/tajawal_medium"
        android:textAllCaps="false"
        android:backgroundTint="#FFF3D6"
        android:textColor="#000"
        android:visibility="gone"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/bioUserTV"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>


    <TextView
        android:id="@+id/myRecipesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Recipes"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/tajawal_medium"
        android:textColor="@color/orange_primary"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/manageProfileBT"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipesRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_margin="8dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/myRecipesTV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
